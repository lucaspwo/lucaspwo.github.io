{# Macro para imagem Ãºnica centralizada #}
{% macro single(src, alt, width, caption) %}
<div class="col-md-12">
  <div class="col-md-12 text-center">
    <a href="{{ src }}" class="image-popup" style="margin-bottom: 1px;">
      <img src="{{ src }}" class="img-responsive" style="margin: 0 auto; width: {{ width or 50 }}%; height: auto;" alt="{{ alt }}">
    </a>
    {% if caption %}
    <p>{{ caption | safe }}</p>
    {% endif %}
  </div>
</div>
{% endmacro %}

